{
  "AllowedHosts": "*",
  "Core": {
    "AppName": "ms-inventory",
    "Version": "v1",
    "Description": "Microservicio para gestionar el inventario de la tienda online.",
    "Business": "Acme",
    "Contact": {
      "Name": "Alice Smith",
      "Email": "alice.smith@example.com"
    }
  },
  "Security": {
    "Authority": "https://codedesignplus.b2clogin.com/codedesignplus.onmicrosoft.com/B2C_1_CodeDeseignPlus/oauth2/v2.0/",
    "IncludeErrorDetails": true,
    "ValidateAudience": true,
    "ValidateIssuer": true,
    "ValidateLifetime": true,
    "RequireHttpsMetadata": true,
    "ValidIssuer": "https://codedesignplus.b2clogin.com/3461e311-a66e-46ab-afdf-2bbfb72a5cb0/v2.0/",
    "ValidAudiences": [],
    "Applications": []
  },
  "Redis": {
    "Instances": {
      "Core": {
        "ConnectionString": "localhost:6379"
      }
    }
  },
  "RedisCache": {
    "Enable": true,
    "Expiration": "00:05:00"
  },
  "RabbitMQ": {
    "Enable": true,
    "Host": "localhost",
    "Port": 5672,
    "UserName": "user",
    "Password": "pass",
    "EnableDiagnostic": true
  },
  "Mongo": {
    "Enable": true,
    "Database": "db-ms-inventory",
    "Diagnostic": {
      "Enable": true,
      "EnableCommandText": true
    }
  },
  "Logger": {
    "Enable": true,
    "OTelEndpoint": "http://127.0.0.1:4317"
  },
  "Observability": {
    "Enable": true,
    "ServerOtel": "http://127.0.0.1:4317",
    "Trace": {
      "Enable": true,
      "AspNetCore": true,
      "GrpcClient": false,
      "SqlClient": false,
      "CodeDesignPlusSdk": true,
      "Redis": true,
      "Kafka": false
    },
    "Metrics": {
      "Enable": true,
      "AspNetCore": true
    }
  },
  "Vault": {
    "Enable": true,
    "Address": "http://127.0.0.1:8200",
    "AppName": "ms-inventory",
    "Solution": "e-comerce-acme",
    "Token": "root",
    "Mongo": {
      "Enable": true,
      "TemplateConnectionString": "mongodb://{0}:{1}@localhost:27017"
    },
    "RabbitMQ": {
      "Enable": true
    }
  }
}
